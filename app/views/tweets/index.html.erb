<h1 id="header">投稿一覧</h1>

<%= notice %>
<table class="main">
  <tr class="index">
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @tweets.each do |post| %>
  <tr class="index">
    <td><%= @tweet.name %></td>
    <td><%= @tweet.content %></td>
    <td><%= link_to 'ツイートを確認', tweet_path(post.id) %></td>
    <td><%= link_to "ツイートを編集する", edit_tweet_path(post.id) %></td>
    <td><%= link_to 'ツイートを削除', tweet_path(post.id), method: :delete %></td>
　</tr>
<% end %>
</table>

<%= link_to 'ツイートする', new_tweet_path %>